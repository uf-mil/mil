cmake_minimum_required(VERSION 3.0.2)
project(indyav_control)

find_package(catkin REQUIRED
  roscpp
  message_generation
  std_msgs)

add_message_files(
  DIRECTORY msg
  FILES
  SteeringStamped.msg
  RevsStamped.msg
)

